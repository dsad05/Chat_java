<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" prefHeight="500" prefWidth="600" spacing="10" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chat.controller.ChatController">

    <!-- Chat area -->
    <TextArea fx:id="chatArea" editable="false" styleClass="text-area" wrapText="true" VBox.vgrow="ALWAYS" />

    <!-- Message input and send button -->
    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="messageField" promptText="Type your message..." styleClass="text-field" HBox.hgrow="ALWAYS" />
        <Button onAction="#onSendButtonClick" styleClass="button" text="Send" />
    </HBox>
</VBox>
